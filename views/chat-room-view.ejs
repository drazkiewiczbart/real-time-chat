<%- include('templates/header-view') -%>
<div class="container">
  <div class="row d-flex justify-content-center">
    <div
      class="col col-sm-8 col-md-8 col-lg-7 col-xl-7 col-xxl-7 p-3 text-center"
    >
      <h1>Chat room</h1>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div
      class="col col-sm-8 col-md-8 col-lg-7 col-xl-7 col-xxl-7 p-3 messages-wrapper"
    >
      <!-- Messages-->
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div
      class="col col-sm-8 col-md-8 col-lg-7 col-xl-7 col-xxl-7 p-3 text-center"
    >
      <form class="send-message" action="">
        <div class="row">
          <div class="col-1">
            <div class="input-group">
              <div class="input-group-prepend">
                <button
                  class="btn btn-outline-secondary dropdown-toggle btn-current-value"
                  type="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  Message
                </button>
                <div class="dropdown-menu">
                  <a class="dropdown-item join-to-room">Join to room</a>
                  <a class="dropdown-item leave-room">Leave room</a>
                  <a class="dropdown-item change-name">Change name</a>
                </div>
              </div>
            </div>
          </div>
          <div class="col">
            <input
              class="form-control input-message"
              type="text"
              placeholder="Type something..."
              aria-label=""
              aria-describedby="basic-addon1"
            />
          </div>
          <div class="col-1">
            <button class="btn btn-outline-secondary" type="submit">
              Send
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div
      class="col col-sm-8 col-md-8 col-lg-7 col-xl-7 col-xxl-7 p-3 text-center"
    >
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Navbar</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Features</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Pricing</a>
              </li>
              <li class="nav-item">
                <a
                  class="nav-link disabled"
                  href="#"
                  tabindex="-1"
                  aria-disabled="true"
                  >Disabled</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </div>
</div>
<script src="javascripts/website-utilities.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="javascripts/socket-io-client.js"></script>
<%- include('templates/footer-view') -%>
